# Test Environment Configuration
#
# This file contains configuration for running tests against the Gmail MCP server.
# Copy this to .env.test and update with your test values.
#
# IMPORTANT: Never commit real credentials to Git!

# =============================================================================
# TEST MODE
# =============================================================================

# Use mock API for tests (true = safe for CI/CD, false = real API calls)
USE_MOCK_API=true

# =============================================================================
# TEST EMAIL ADDRESSES
# =============================================================================

# Your test Gmail account (for integration tests)
TEST_EMAIL=your-test-email@gmail.com

# Recipient for test emails (usually same as TEST_EMAIL)
TEST_RECIPIENT=your-test-email@gmail.com

# =============================================================================
# GMAIL API CREDENTIALS (for integration tests only)
# =============================================================================

# Path to OAuth2 credentials file
# Leave empty to use default: mcp_servers/email/config.json
GMAIL_CREDENTIALS_PATH=

# Path to OAuth2 token file
# Leave empty to use default: mcp_servers/email/token.json
GMAIL_TOKEN_PATH=

# =============================================================================
# TEST CONFIGURATION
# =============================================================================

# Server startup timeout (seconds)
SERVER_STARTUP_TIMEOUT=10

# Tool execution timeout (seconds)
TOOL_EXECUTION_TIMEOUT=30

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Delay between retries (seconds)
RETRY_DELAY=1

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable rate limit testing (may take longer)
TEST_RATE_LIMITING=false

# Number of emails to send in rate limit tests
RATE_LIMIT_TEST_COUNT=5

# Expected minimum time for rate limit tests (seconds)
RATE_LIMIT_MIN_TIME=2.0

# =============================================================================
# CLEANUP
# =============================================================================

# Automatically cleanup test emails after tests
AUTO_CLEANUP_EMAILS=true

# Automatically cleanup test drafts after tests
AUTO_CLEANUP_DRAFTS=true

# Keep test emails for debugging (overrides auto cleanup)
KEEP_TEST_EMAILS=false

# =============================================================================
# LOGGING
# =============================================================================

# Log level for tests (DEBUG, INFO, WARNING, ERROR)
TEST_LOG_LEVEL=INFO

# Save test logs to file
SAVE_TEST_LOGS=true

# Test log directory
TEST_LOG_DIR=tests/logs

# =============================================================================
# ADVANCED OPTIONS
# =============================================================================

# Use real MCP protocol communication (requires server running)
USE_MCP_PROTOCOL=false

# MCP server URL for protocol tests
MCP_SERVER_URL=http://localhost:3000

# Parallel test execution workers (0 = auto)
PYTEST_WORKERS=0

# Enable coverage reporting
ENABLE_COVERAGE=true

# Minimum required coverage percentage
MIN_COVERAGE=80
